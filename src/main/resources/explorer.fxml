<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<GridPane id="root" fx:controller="controller.FileExploreController" alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml">
    <children>
        <HBox GridPane.rowIndex="0" spacing="8">
            <Button fx:id="resize" onMouseClicked="#resize">重置</Button>
            <Button fx:id="parentDir" onMouseClicked="#returnParDir">上级目录</Button>
        <Button fx:id="exit" onMouseClicked="#exit" >退出</Button>
        </HBox>
        <ScrollPane hbarPolicy="AS_NEEDED" vbarPolicy="NEVER"  GridPane.rowIndex="1">
            <ListView fx:id="files" fixedCellSize="60" GridPane.fillWidth="true"
                      onMouseClicked="#clickFile" onSwipeLeft="#returnParDir"></ListView>
        </ScrollPane>
    </children>
</GridPane>