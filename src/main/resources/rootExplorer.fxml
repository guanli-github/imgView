<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<GridPane id="root" fx:controller="controller.RootExploreController" alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml">
    <children>
        <ScrollPane hbarPolicy="AS_NEEDED" vbarPolicy="NEVER">
            <ListView fx:id="files"  prefWidth="760" prefHeight="1000" fixedCellSize="60" GridPane.fillWidth="true"
                      onMouseClicked="#clickFile"></ListView>
        </ScrollPane>
    </children>
</GridPane>