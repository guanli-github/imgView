<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane id="root" fx:id="root" fx:controller="controller.TextController" alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml">
    <children>
        <HBox GridPane.rowIndex="0" GridPane.columnIndex="0">
            <Label fx:id="pageNum" text="1/1"></Label>
            <Button fx:id="returnDir" opacity="0.3" minWidth="20"
                    onMouseClicked="#returnDir">返回目录
            </Button>
            <Button fx:id="bgImg" opacity="0.3" minWidth="20"
                    onMouseClicked="#setBgImg">背景图片
            </Button>
            <Button fx:id="toSearch" opacity="0.3" minWidth="20"
                    onMouseClicked="#toSearch">搜索
            </Button>
        </HBox>
            <TextArea fx:id="text" wrapText="true" editable="false"
                      GridPane.rowIndex="1" ></TextArea>
    </children>
</GridPane>