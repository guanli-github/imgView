<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane id="root" fx:id="root" fx:controller="controller.TextController"
          xmlns:fx="http://javafx.com/fxml">
    <children>
        <HBox GridPane.rowIndex="0" GridPane.columnIndex="0"
              spacing="10">
            <Button fx:id="bgImg" opacity="0.3" minWidth="20"
                    onMouseClicked="#setBgImg">背景图片
            </Button>
            <Button fx:id="toSearch" opacity="0.3" minWidth="20"
                    onMouseClicked="#toSearch">搜索
            </Button>
            <Button fx:id="nextChapter" opacity="0.3" minWidth="20"
                    onMouseClicked="#nextChapter">下一章
            </Button>
            <Button fx:id="preChapter" opacity="0.3" minWidth="20"
                    onMouseClicked="#preChapter">上一章
            </Button>
            <Button fx:id="returnDir" opacity="0.3" minWidth="20"
                    onMouseClicked="#returnDir">返回目录
            </Button>
        </HBox>
            <TextArea fx:id="text"
                      editable="false"
                      wrapText="true"
                      GridPane.rowIndex="1" ></TextArea>
    </children>
</GridPane>