<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<GridPane id="root" fx:id="root" fx:controller="controller.ViewerController"
          alignment="CENTER"
          onSwipeLeft="#doLeft" onSwipeRight="#doRight"
          onMouseClicked="#doPageClick"
          onKeyPressed="#keyPressed"
          xmlns:fx="http://javafx.com/fxml">
    <children>
        <VBox
              spacing="10">
            <Button fx:id="returnDir" opacity="0.3" minWidth="20"
                    onMouseClicked="#returnDir">返回目录
            </Button>
            <Button fx:id="changeOrient" opacity="0.3" minWidth="20"
                    onMouseClicked="#changeOrient">右->左
            </Button>
            <Label fx:id="pageNum" text="1/1" textFill="coral"></Label>
        </VBox>
        <ImageView fx:id="imgView" GridPane.rowIndex="1"
                   preserveRatio="true"></ImageView>
        <Slider fx:id="slider" visible="false"
                onMouseDragged="#onSliderChanging" onMouseReleased="#onSliderChanged"
                blockIncrement="1.0" majorTickUnit="1" max="1" min="1"
                minorTickCount="1"
                showTickLabels="true"
                snapToTicks="true"
                prefHeight="200"
                GridPane.rowIndex="1"></Slider>
    </children>
</GridPane>