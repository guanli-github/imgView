<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.Label?>
<GridPane id="root" fx:controller="viewer.ViewerController" alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml">
    <children>
        <HBox GridPane.rowIndex="0" GridPane.columnIndex="0">
            <Label fx:id="pageNum" text="1/1"></Label>
            <Button fx:id="changeOrient" opacity="0.3" minWidth="20"
                    onMouseClicked="#changeOrient">切换方向
            </Button>
            <Button fx:id="returnDir" opacity="0.3" minWidth="20"
                    onMouseClicked="#returnDir">返回
                目录
            </Button>
        </HBox>
        <ImageView fx:id="imgView" GridPane.rowIndex="1"
                   preserveRatio="true"
                   onSwipeLeft="#doLeft" onSwipeRight="#doRight"
                   onMouseClicked="#doPageClick"
                   onRotate="#resizeImgView"></ImageView>
        <ScrollBar fx:id="jumpBar" GridPane.rowIndex="2" GridPane.fillWidth="true" nodeOrientation="RIGHT_TO_LEFT"
                   max="100" min="1" value="1"></ScrollBar>
    </children>
</GridPane>