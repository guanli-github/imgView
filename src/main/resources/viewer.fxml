<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ScrollBar?>
<GridPane id="root" fx:id="root" fx:controller="controller.ViewerController" alignment="CENTER"
          onSwipeLeft="#doLeft" onSwipeRight="#doRight"
          onMouseClicked="#doPageClick"
          xmlns:fx="http://javafx.com/fxml">
    <children>
        <HBox GridPane.rowIndex="0" GridPane.columnIndex="0"
              spacing="10">
            <Button fx:id="returnDir" opacity="0.3" minWidth="20"
                    onMouseClicked="#returnDir">返回目录
            </Button>
            <Button fx:id="changeOrient" opacity="0.3" minWidth="20"
                    onMouseClicked="#changeOrient">切换方向
            </Button>
            <Label fx:id="pageNum" text="1/1"></Label>
        </HBox>
        <ImageView fx:id="imgView" GridPane.rowIndex="1"
                   preserveRatio="true"></ImageView>
        <ScrollBar fx:id="jumpBar" visible="false"></ScrollBar>
    </children>
</GridPane>