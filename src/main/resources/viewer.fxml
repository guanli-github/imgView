<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<GridPane id="root" fx:controller="viewer.ViewerController" alignment="CENTER"
           xmlns:fx="http://javafx.com/fxml">
    <children>
        <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" >
            <Button  fx:id="changeOrient" opacity="0.3" minWidth="20"
                     onMouseClicked="#changeOrient">切换方向</Button>
            <Button  fx:id="returnDir" opacity="0.3" minWidth="20"
                     onMouseClicked="#returnDir">返回
                目录</Button>
        </HBox>
        <ImageView fx:id="imgView" GridPane.rowIndex="1" preserveRatio="true"
                   onSwipeLeft="#doLeft" onSwipeRight="#doRight"
                   onMouseClicked="#doPageClick"
                    onRotate="#resizeImgView"></ImageView>

    </children>
</GridPane>