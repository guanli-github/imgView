<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<AnchorPane id="root" fx:controller="viewer.ViewerController"
            xmlns:fx="http://javafx.com/fxml">
    <children>
        <ImageView fx:id="imgView" preserveRatio="true"
                   onSwipeLeft="#doLeft" onSwipeRight="#doRight"
                   onMouseClicked="#doPageClick"
                    onRotate="#resizeImgView"></ImageView>
        <HBox>
        <Button  fx:id="changeOrient" opacity="0.3" minWidth="20"
        onMouseClicked="#changeOrient">切换方向</Button>
        <Button  fx:id="returnDir" opacity="0.3" minWidth="20"
                 onMouseClicked="#returnDir">返回目录</Button>
        </HBox>
    </children>
</AnchorPane>