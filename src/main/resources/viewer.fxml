<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<GridPane id="root" fx:controller="controller.ViewerController" alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml">
    <children>
        <HBox GridPane.rowIndex="0" GridPane.columnIndex="0">
            <Label fx:id="pageNum" text="1/1"></Label>
            <Button fx:id="changeOrient" opacity="0.3" minWidth="20"
                    onMouseClicked="#changeOrient">切换方向
            </Button>
            <Button fx:id="returnDir" opacity="0.3" minWidth="20"
                    onMouseClicked="#returnDir">返回目录
            </Button>
        </HBox>
        <ImageView fx:id="imgView" GridPane.rowIndex="1"
                   preserveRatio="true"
                   onSwipeLeft="#doLeft" onSwipeRight="#doRight"
                   onMouseClicked="#doPageClick"
                   onRotate="#resize"></ImageView>
        <Slider fx:id="jumpSlider" GridPane.rowIndex="2"
                max="1" min="0" value="0"  nodeOrientation="RIGHT_TO_LEFT"></Slider>
    </children>
</GridPane>