<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<GridPane id="root" fx:id="root" fx:controller="controller.ViewerController"
          alignment="CENTER"
          onTouchPressed="#touchPress"
          xmlns:fx="http://javafx.com/fxml">
    <children>
        <VBox fx:id="menu" spacing="10" visible="false" managed="false" alignment="CENTER"
              onTouchReleased="#hideModal" onMouseClicked="#hideModal">
            <Label fx:id="pageNum" text="1/1" textFill="coral"></Label>
            <Button fx:id="changeOrient"
                    onMouseClicked="#changeOrient"
                    onTouchReleased="#changeOrient">右->左
            </Button>
            <Button onMouseClicked="#preFile"
                    onTouchReleased="#preFile">上一本
            </Button>
            <Button onMouseClicked="#nextFile"
                    onTouchReleased="#nextFile">下一本
            </Button>
            <Button fx:id="returnDir"
                    onMouseClicked="#returnDir"
                    onTouchReleased="#returnDir">返回文件夹
            </Button>
        </VBox>
        <ImageView fx:id="imgView"
                   focusTraversable="true"  onKeyPressed="#keyPress"
                   preserveRatio="true"></ImageView>
        <Slider fx:id="slider" visible="false"
                onDragDetected="#slide" onDragDone="#hideModal"
                blockIncrement="1.0" majorTickUnit="1" max="1" min="1"
                minorTickCount="1"
                showTickLabels="true"
                snapToTicks="true"
                prefHeight="200"></Slider>
    </children>
</GridPane>