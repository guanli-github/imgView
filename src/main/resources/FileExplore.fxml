<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<GridPane id="root" fx:controller="fIleExplore.FIleExploreController" alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml">
    <children>
        <HBox GridPane.columnIndex="0">
        <Button fx:id="parentDir" onMouseClicked="#returnParDir" AnchorPane.leftAnchor="0.5">上级目录</Button>
        </HBox>
        <ScrollPane hbarPolicy="AS_NEEDED" vbarPolicy="NEVER"  GridPane.columnIndex="1">
            <ListView fx:id="files" onMouseClicked="#clickFile"></ListView>
        </ScrollPane>
    </children>
</GridPane>